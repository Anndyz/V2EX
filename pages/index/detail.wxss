page{
  width: 100%;
  height: 100%;
  background: #F8F8FF;
}

.detail-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.detail-info{
  width: 95%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.detail-title{
  width: 100%;
  /* height: 70px; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-bottom: 1px solid gray;
  padding-bottom: 5px;  
}

.topic-info{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
}

.detail-left{
  /* width: 100%; */
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items: center;
}
.img-wrapper{
  height: 80rpx;
  width: 80rpx;
}
.img{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.info-wrapper{
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  align-items: flex-start;
}

.info-bottom{
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items: flex-start;
}

.tag{
  background: #e5e5e5;
  padding:2px  4px ; 
  border-radius: 4px;
}

.detail-text{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;

  margin-bottom: 20rpx;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: normal;
  font-size: 14px;
  color: #333;
}